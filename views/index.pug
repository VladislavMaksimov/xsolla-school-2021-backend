extends layout

block content
  form
    div
      label
        | Name
        input(type="text" id="name")
    div
      label
        | Type
        input(type="text" id="type")
    div
      label
        | Price
        input(type="text" id="price")
    button(type='button' id='button-post')
      | Post data

  div(id='current-product')
    article(id='current-product-info')
      h1 Current product
      p
        strong SKU:
        span(id='current-product-sku') -
      p
        strong Name:
        span(id='current-product-name') -
      p
        strong Type:
        span(id='current-product-type') -
      p
        strong Price:
        span(id='current-product-price') -

  div(id='products-container')